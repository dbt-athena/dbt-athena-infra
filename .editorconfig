root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.py]
indent_size = 4

# 2 space indentation
[*.{sql,json}]
indent_size = 2

[*.{yml,yaml}]
quote_type = single

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
